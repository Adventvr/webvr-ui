{
  "name": "webvr-ui",
  "version": "0.0.1",
  "description": "Library that creates a UI wrapping the WebVR experience",
  "main": "src/main.js",
  "authors": [
    "Jonas Jongejan <jonas@halfdanj.dk>"
  ],
  "scripts": {
    "build": "browserify src/index.js --standalone webvrui | derequire > build/webvr-ui.js",
    "watch": "watchify src/index.js --standalone webvrui -v -d -o 'derequire > build/webvr-ui.js'",
    "start": "npm run watch & serve ./",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "screenfull": "^3.0.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "derequire": "^2.0.3",
    "serve": "^1.4.0",
    "tape": "^4.6.2",
    "watchify": "^3.7.0"
  },
  "keywords": [
    "vr",
    "webvr"
  ],
  "license": "Apache-2.0",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "author": "Jonas Jongejan"
}
