{
  "name": "webvr-ui",
  "version": "0.0.1",
  "description": "Library that creates a UI wrapping the WebVR experience",
  "main": "src/index.js",
  "authors": [
    "Jonas Jongejan <jonas@halfdanj.dk>"
  ],
  "scripts": {
    "build": "npm run build-main & npm run build-aframe",
    "build-aframe": "browserify src/AframeComponent.js | derequire > build/webvr-ui.aframe.js",
    "build-main": "browserify src/index.js  | derequire > build/webvr-ui.js",
    "start": "budo src/index.js:build/webvr-ui.js src/aframe.js:build/webvr-ui.aframe.js --live --verbose --port 3000",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "eventemitter3": "^2.0.2",
    "screenfull": "^3.0.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "derequire": "^2.0.3",
    "budo": "^9.2.1",
    "tape": "^4.6.2",
    "watchify": "^3.7.0"
  },
  "keywords": [
    "vr",
    "webvr"
  ],
  "license": "Apache-2.0",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "author": "Jonas Jongejan"
}
